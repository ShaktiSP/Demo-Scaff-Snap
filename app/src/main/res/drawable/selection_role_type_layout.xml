<?xml version="1.0" encoding="utf-8"?><layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer gradient "stroke" background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#F2C94D"
                android:endColor="#F39A4A" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Inner content background with padding to reveal stroke -->
    <item
        android:left="1.5dp"
        android:top="1.5dp"
        android:right="1.5dp"
        android:bottom="1.5dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFDFB" />
            <corners android:radius="10.5dp" />
        </shape>
    </item>
</layer-list>

